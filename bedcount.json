{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "version": "v0.4",
    "type": "object",
    "properties": {
        "centre": {
            "description": "Name of centre",
            "type": "string",
            "pattern": "^[a-z].*$",
            "minLength": 3,
            "maxLength": 50
        },
        "male": {
            "description": "Number of male beds occupied",
            "type": "integer",
            "minimum": 0,
            "multipleOf": 1
        },
        "female": {
            "description": "Number of female beds occupied",
            "type": "integer",
            "minimum": 0,
            "multipleOf": 1
        },
        "ooc_male": {
            "description": "Number of male out of commission beds",
            "type": "integer",
            "minimum": 0,
            "multipleOf": 1
        },
        "ooc_female": {
            "description": "Number of female out of commission beds",
            "type": "integer",
            "minimum": 0,
            "multipleOf": 1
        }
    },
    "required": [
        "centre",
        "male",
        "female",
        "ooc_male",
        "ooc_female"
    ]
}