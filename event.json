{
  "definitions": {
    "transaction_id": {
      "description": "Incrementing ID keyed to centre used to ensure that consistent order is maintained, can be dynamically reset to 1 by the client after 1000000000",
      "type": "integer",
      "minimum": 1,
      "maximum": 2000000000
    },
    "timestamp": {
      "description": "Timestamp that event occurred",
      "type": "string",
      "format": "date-time"
    },
    "centre": {
      "description": "Name of centre",
      "type": "string",
      "pattern": "^[a-z]{3,30}$"
    },
    "nationality": {
      "description": "Case nationality. xxx when nationality is not known refer to ISO 3166 alpha-3",
      "type": "string",
      "pattern": "^([a-z]{3})$"
    },
    "gender": {
      "description": "Gender",
      "type": "string",
      "enum": [
        "m",
        "f"
      ]
    },
    "cid_id": {
      "description": "Case information database identifier",
      "type": "integer",
      "maxLength": 100,
      "minimum": 0
    },
    "operation": {
      "description": "Event operation",
      "type": "string"
    }
  },
  "oneOf": [
    {
      "description": "commission changing",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "timestamp": {
          "$ref": "#/definitions/timestamp"
        },
        "transaction_id": {
          "$ref": "#/definitions/transaction_id"
        },
        "centre": {
          "$ref": "#/definitions/centre"
        },
        "operation": {
          "allOf": [
            {
              "$ref": "#/definitions/operation"
            },
            {
              "enum": [
                "out commission",
                "in commission"
              ]
            }
          ]
        },
        "details": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "ref",
            "reason",
            "gender"
          ],
          "properties": {
            "ref": {
              "type": "string",
              "pattern": "^([A-Za-z0-9- ]{0,10})$"
            },
            "reason": {
              "type": "string",
              "pattern": "^([A-Za-z0-9- ]{0,75})$"
            },
            "gender": {
              "$ref": "#/definitions/gender"
            }
          }
        }
      },
      "required": [
        "operation",
        "details",
        "timestamp",
        "transaction_id",
        "centre"
      ]
    },
